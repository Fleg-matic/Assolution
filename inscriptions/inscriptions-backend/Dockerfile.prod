# Dockerfile.prod pour le backend Spring Boot - Version corrigÃ©e
FROM maven:3.9.6-eclipse-temurin-21 AS builder

WORKDIR /build

# Copier les fichiers de build
COPY pom.xml .
COPY src ./src

# VÃ©rifier la structure du projet
RUN echo "ðŸ“ Project structure:" && \
    ls -la . && \
    echo "ðŸ“„ Maven version:" && \
    mvn --version

# GÃ©nÃ©rer le fichier application-prod.properties depuis le template
RUN echo "ðŸ“‹ Generating application-prod.properties from template..." && \
    if [ -f "../../config-templates/application-prod.properties.template" ]; then \
        echo "âœ… Template found, copying to resources..." && \
        cp ../../config-templates/application-prod.properties.template src/main/resources/application-prod.properties; \
    else \
        echo "âŒ Template not found at ../../config-templates/application-prod.properties.template"; \
        echo "ðŸ“ Available files in config-templates:"; \
        ls -la ../../config-templates/ || echo "Directory not found"; \
        exit 1; \
    fi

# Build de l'application
RUN echo "ðŸ”¨ Building with Maven..." && \
    mvn clean package -DskipTests

# Trouver et copier le JAR
RUN echo "ðŸ“¦ Checking build artifacts:" && \
    ls -la target/ && \
    JAR_FILE=$(find target/ -name "*.jar" -not -name "*-sources.jar" -not -name "*-javadoc.jar" | head -1) && \
    echo "âœ… Found JAR: $JAR_FILE" && \
    cp "$JAR_FILE" /build/app.jar && \
    ls -la /build/app.jar

# Stage final de production
FROM eclipse-temurin:21-jre-jammy

# Installer les outils nÃ©cessaires
RUN apt-get update && \
    apt-get install -y tini curl netcat-openbsd && \
    rm -rf /var/lib/apt/lists/*

# CrÃ©er utilisateur non-root
RUN groupadd -g 1001 appuser && \
    useradd -r -u 1001 -g appuser appuser

# CrÃ©er rÃ©pertoires avec les bonnes permissions
WORKDIR /app
RUN mkdir -p /app/logs && \
    chown -R appuser:appuser /app && \
    chmod -R 755 /app

# Copier le JAR avec les bonnes permissions
COPY --from=builder --chown=appuser:appuser /build/app.jar /app/app.jar

# CrÃ©er le script de dÃ©marrage amÃ©liorÃ©
RUN cat > /app/start-prod.sh << 'EOF'
#!/bin/bash
set -e

echo "ðŸ­ Starting Assolution Backend (Production)"
echo "ðŸ“Š Java Version: $(java -version 2>&1 | head -1)"
echo "ðŸ”§ Active Profile: ${SPRING_PROFILES_ACTIVE:-prod}"
echo "ðŸ’¾ Database Host: ${DB_HOST:-postgres}"
echo "ðŸš€ JVM Options: ${JAVA_OPTS}"

# VÃ©rifier les variables d'environnement critiques
if [ -z "$DB_HOST" ] || [ -z "$DB_USER" ] || [ -z "$DB_PASSWORD" ]; then
    echo "âŒ Missing required database environment variables"
    echo "Required: DB_HOST, DB_USER, DB_PASSWORD"
    exit 1
fi

# Attendre la base de donnÃ©es avec timeout
echo "â³ Waiting for database connection..."
TIMEOUT=60
COUNT=0
while ! nc -z ${DB_HOST} ${DB_PORT:-5432}; do 
    COUNT=$((COUNT + 1))
    if [ $COUNT -gt $TIMEOUT ]; then
        echo "âŒ Database connection timeout after ${TIMEOUT} seconds"
        exit 1
    fi
    echo "Attempt $COUNT/$TIMEOUT - waiting for ${DB_HOST}:${DB_PORT:-5432}..."
    sleep 1
done
echo "âœ… Database connection established!"

# VÃ©rifier que le port n'est pas dÃ©jÃ  utilisÃ©
PORT=${SERVER_PORT:-8080}
if netstat -tuln 2>/dev/null | grep -q ":$PORT "; then
    echo "âŒ Port $PORT is already in use. Trying to find available port..."
    # Optionnel: essayer de trouver un port libre
    for i in {8081..8090}; do
        if ! netstat -tuln 2>/dev/null | grep -q ":$i "; then
            PORT=$i
            echo "âœ… Using available port: $PORT"
            export SERVER_PORT=$PORT
            break
        fi
    done
fi

# DÃ©marrer l'application Spring Boot
echo "ðŸš€ Starting Spring Boot application on port $PORT..."
exec java ${JAVA_OPTS:-"-Xmx1g -Xms512m"} \
    -Djava.security.egd=file:/dev/./urandom \
    -Dspring.profiles.active=${SPRING_PROFILES_ACTIVE:-prod} \
    -Dserver.port=${SERVER_PORT:-8080} \
    -Dlogging.file.path=/app/logs \
    -jar /app/app.jar
EOF

RUN chmod +x /app/start-prod.sh && \
    chown appuser:appuser /app/start-prod.sh

# Utiliser l'utilisateur non-root
USER appuser

# Exposer le port (configurable)
EXPOSE ${SERVER_PORT:-8080}

# Healthcheck
HEALTHCHECK --interval=30s --timeout=10s --start-period=60s --retries=3 \
    CMD curl -f http://localhost:${SERVER_PORT:-8080}/actuator/health || exit 1

# Point d'entrÃ©e
ENTRYPOINT ["tini", "--", "/app/start-prod.sh"]