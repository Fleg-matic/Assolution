# Dockerfile.prod pour le backend Spring Boot
FROM eclipse-temurin:21-jdk AS builder

WORKDIR /build

# Copier les fichiers de build
COPY pom.xml .
COPY src ./src
COPY mvnw* ./

# Donner les permissions d'ex√©cution
RUN chmod +x ./mvnw || true

# Build de l'application
RUN ./mvnw clean package -DskipTests || mvn clean package -DskipTests

# V√©rifier et renommer le JAR
RUN echo "üì¶ Checking build artifacts:" && \
    ls -la target/ && \
    JAR_FILE=$(find target/ -name "*.jar" -not -name "*-sources.jar" -not -name "*-javadoc.jar" | head -1) && \
    echo "Found JAR: $JAR_FILE" && \
    cp "$JAR_FILE" /build/assolution-backend.jar && \
    ls -la /build/assolution-backend.jar

# Stage final de production
FROM eclipse-temurin:21-jre-jammy

# Installer les outils n√©cessaires
RUN apt-get update && \
    apt-get install -y tini curl netcat-openbsd && \
    rm -rf /var/lib/apt/lists/*

# Cr√©er utilisateur non-root
RUN groupadd -g 1001 appuser && \
    useradd -r -u 1001 -g appuser appuser

# Cr√©er r√©pertoires
WORKDIR /app
RUN mkdir -p /app/logs && chown -R appuser:appuser /app

# Copier le JAR
COPY --from=builder --chown=appuser:appuser /build/assolution-backend.jar /app/app.jar

# V√©rifier que le JAR est bien copi√©
RUN ls -la /app/app.jar && \
    echo "‚úÖ JAR file is present"

# ‚úÖ Cr√©er le script de d√©marrage avec COPY heredoc (syntaxe correcte)
COPY --chown=appuser:appuser <<EOF /app/start-prod.sh
#!/bin/bash

echo "üè≠ Starting Assolution Backend (Production)"
echo "üìä Java Version: \$(java -version 2>&1 | head -1)"
echo "üîß Active Profile: \${SPRING_PROFILES_ACTIVE:-prod}"
echo "üíæ Database Host: \${DB_HOST:-postgres}"
echo "üöÄ JVM Options: \${JAVA_OPTS}"

# Attendre la base de donn√©es
echo "‚è≥ Waiting for database connection..."
while ! nc -z \${DB_HOST:-postgres} \${DB_PORT:-5432}; do
  sleep 1
done
echo "‚úÖ Database connection established!"

# V√©rifier que le JAR existe
if [ ! -f "/app/app.jar" ]; then
    echo "‚ùå JAR file not found at /app/app.jar"
    ls -la /app/
    exit 1
fi

# D√©marrer l'application Spring Boot avec la commande CORRECTE
echo "üöÄ Starting Spring Boot application..."
echo "üîß Command: java \${JAVA_OPTS} -jar /app/app.jar"

exec java \${JAVA_OPTS} \\
    -Djava.security.egd=file:/dev/./urandom \\
    -Dspring.profiles.active=\${SPRING_PROFILES_ACTIVE:-prod} \\
    -jar /app/app.jar
EOF

# Donner les permissions d'ex√©cution
RUN chmod +x /app/start-prod.sh

# Utiliser l'utilisateur non-root
USER appuser

# Exposer le port
EXPOSE 8080

# Point d'entr√©e
ENTRYPOINT ["tini", "--", "/app/start-prod.sh"]