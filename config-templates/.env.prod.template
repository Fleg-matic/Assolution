# ============================================
# FICHIER .env.prod (Production) - TEMPLATE
# ============================================

# Base de données Production
DB_HOST=postgres
DB_PORT=5432
DB_NAME=assolution_prod
DB_USER=assolution_user
DB_PASSWORD=${DB_PASSWORD_PROD}

# Application Production
JWT_SECRET=${JWT_SECRET_PROD}
STRIPE_SECRET_KEY=${STRIPE_SECRET_KEY_PROD}
STRIPE_WEBHOOK_SECRET=${STRIPE_WEBHOOK_SECRET_PROD}

# Email Gmail Production
EMAIL_HOST=${EMAIL_HOST_PROD}
EMAIL_USER=${EMAIL_USER_PROD}
EMAIL_PASSWORD=${EMAIL_PASSWORD_PROD}

# Spring Boot Production
SPRING_PROFILES_ACTIVE=prod

# Frontend Production
BACKEND_URL=${BACKEND_URL_PROD}
ENVIRONMENT=production

# Nginx Production (sécurisé)
NGINX_RATE_LIMIT=10r/s
NGINX_BURST=20

# Production
DEBUG=false
LOG_LEVEL=WARN

# Sécurité Production
SECURE_COOKIES=true
HTTPS_REDIRECT=false
CSP_ENABLED=true

# Monitoring
METRICS_ENABLED=true
HEALTH_CHECK_ENABLED=true