# ============================================
# FICHIER .env.prod (Production) - TEMPLATE CORRIGÉ
# ============================================

# Base de données Production
DB_HOST=postgres
DB_PORT=5432
DB_NAME=assolution_prod
DB_USER=assolution_user
DB_PASSWORD=${DB_PASSWORD_PROD}

# Application Production  
JWT_SECRET=${JWT_SECRET_PROD}
STRIPE_SECRET_KEY=${STRIPE_SECRET_KEY_PROD}
STRIPE_WEBHOOK_SECRET=${STRIPE_WEBHOOK_SECRET_PROD}
STRIPE_PUBLISHABLE_KEY_PROD=${STRIPE_PUBLISHABLE_KEY_PROD}

# Email Gmail Production
EMAIL_HOST=${EMAIL_HOST_PROD}
EMAIL_USER=${EMAIL_USER_PROD}
EMAIL_PASSWORD=${EMAIL_PASSWORD_PROD}
EMAIL_BASE_URL=${EMAIL_BASE_URL}

# Spring Boot Production
SPRING_PROFILES_ACTIVE=prod

# Frontend Production
FRONTEND_API_URL=${FRONTEND_API_URL}
FRONTEND_BASE_URL=${FRONTEND_BASE_URL}
BACKEND_URL_PROD=${BACKEND_URL_PROD}
ENVIRONMENT=production

# Configuration UI/UX
SUPPORT_EMAIL=${SUPPORT_EMAIL}
SALES_EMAIL=${SALES_EMAIL}
SUPPORT_PHONE=${SUPPORT_PHONE}

# Cookies et sécurité
COOKIE_DOMAIN=${COOKIE_DOMAIN}
COOKIE_SECURE=${COOKIE_SECURE}
CORS_ALLOWED_ORIGINS=${CORS_ALLOWED_ORIGINS}

# Features
ENABLE_ANALYTICS=${ENABLE_ANALYTICS}
ENABLE_HTTPS_REDIRECT=${ENABLE_HTTPS_REDIRECT}
GOOGLE_ANALYTICS_ID=${GOOGLE_ANALYTICS_ID}

# Nginx Production (sécurisé)
NGINX_RATE_LIMIT=10r/s
NGINX_BURST=20

# Production
DEBUG=false
LOG_LEVEL=WARN

# Sécurité Production
SECURE_COOKIES=true
HTTPS_REDIRECT=${ENABLE_HTTPS_REDIRECT}
CSP_ENABLED=true

# Monitoring
METRICS_ENABLED=true
HEALTH_CHECK_ENABLED=true

# Tests E2E Production
CYPRESS_BASE_URL_PROD=${CYPRESS_BASE_URL_PROD}
CYPRESS_API_URL_PROD=${CYPRESS_API_URL_PROD}
CYPRESS_ENVIRONMENT_PROD=${CYPRESS_ENVIRONMENT_PROD}
CYPRESS_TEST_USER_EMAIL=${CYPRESS_TEST_USER_EMAIL}
CYPRESS_TEST_USER_PASSWORD=${CYPRESS_TEST_USER_PASSWORD}
CYPRESS_TEST_ADMIN_EMAIL=${CYPRESS_TEST_ADMIN_EMAIL}
CYPRESS_TEST_ADMIN_PASSWORD=${CYPRESS_TEST_ADMIN_PASSWORD}